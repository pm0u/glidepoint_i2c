#include "../shared.dtsi"

&pro_micro_i2c {
    status = "okay";
};

&oled {
    status = "disabled";
};

&i2c0 {
    bias-pullup;

    glidepoint: glidepoint@0 {
        compatible = "cirque,pinnacle";
        status = "okay";
        reg = <0>;

        sensitivity = "4x";
        sleep;
    };
};

&glidepoint_split {
    device = <&glidepoint>;
};